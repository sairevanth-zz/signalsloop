{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "header",
          "key": "authorization"
        }
      ],
      "destination": "/api/:path*",
      "permanent": false
    }
  ]
}
